# Environment Configuration
# Copy this file to .env and update with your settings

# ============================================
# Application URL
# ============================================
# TodoMVC (Recommended for learning)
BASE_URL=https://demo.playwright.dev/todomvc/

# Other options:
# BASE_URL=https://www.saucedemo.com
# BASE_URL=https://the-internet.herokuapp.com
# BASE_URL=http://localhost:3000

# ============================================
# Browser Settings
# ============================================
# Options: chromium, firefox, webkit
BROWSER=chromium

# Run browser in headless mode (no visible window)
# Options: true, false
HEADLESS=false

# Slow down operations by specified milliseconds (useful for debugging)
SLOW_MO=0

# ============================================
# Test Configuration
# ============================================
# Default timeout for operations (milliseconds)
TIMEOUT=30000

# Default locale for tests
# Options: en-US, es-ES, fr-FR, de-DE, ja-JP, ar-SA
DEFAULT_LOCALE=en-US

# Timezone for tests
TIMEZONE=America/New_York

# ============================================
# Test Credentials (if needed)
# ============================================
# For sites that require authentication
TEST_USERNAME=
TEST_PASSWORD=

# ============================================
# Debugging & Reporting
# ============================================
# Take screenshot on test failure
SCREENSHOT_ON_FAILURE=true

# Record video on test failure
VIDEO_ON_FAILURE=false

# Save trace on failure
TRACE_ON_FAILURE=true
